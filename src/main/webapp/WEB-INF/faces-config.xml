<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	<application>
	   <action-listener>
	       org.primefaces.application.DialogActionListener
	   </action-listener>
	   <navigation-handler>
	       org.primefaces.application.DialogNavigationHandler
	   </navigation-handler>
	   <view-handler>
	       org.primefaces.application.DialogViewHandler
	   </view-handler>
    </application>
    <!-- Validators -->
	<validator>
   		<validator-id>NameValidator</validator-id>
   		<validator-class>org.woym.ui.validators.NameValidator</validator-class>
	</validator>
	<!-- Converters -->
	<converter>
   		<converter-id>LessonTypeNameConverter</converter-id>
   		<converter-class>org.woym.ui.converters.LessonTypeNameConverter</converter-class>
	</converter>
	<converter>
        <converter-id>LocationNameConverter</converter-id>
        <converter-class>org.woym.ui.converters.LocationNameConverter</converter-class>
    </converter>
    <converter>
        <converter-id>RoomNameConverter</converter-id>
        <converter-class>org.woym.ui.converters.RoomNameConverter</converter-class>
    </converter>
    <converter>
        <converter-id>TeacherNameConverter</converter-id>
        <converter-class>org.woym.ui.converters.TeacherNameConverter</converter-class>
    </converter>
    <converter>
        <converter-id>AcademicYearNameConverter</converter-id>
        <converter-class>org.woym.ui.converters.AcademicYearNameConverter</converter-class>
    </converter>
        <converter>
        <converter-id>SchoolclassNameConverter</converter-id>
        <converter-class>org.woym.ui.converters.SchoolclassNameConverter</converter-class>
    </converter>
</faces-config>